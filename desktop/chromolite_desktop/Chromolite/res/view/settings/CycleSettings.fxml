<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.leytonblackler.chromolite.controller.settings.CycleSettingsController">

    <!-- CONSTANTS -->
    <fx:define>
        <Double fx:id="WINDOW_WIDTH" fx:value="560"/>
        <Double fx:id="WINDOW_HEIGHT" fx:value="750"/>
        <Double fx:id="HEADER_HEIGHT" fx:value="30"/>
        <Double fx:id="SPECTRUM_HEIGHT" fx:value="335"/>
        <Double fx:id="PADDING" fx:value="15"/>
        <Double fx:id="BUTTON_COLOURS_ARC_SIZE" fx:value="8"/>
        <Double fx:id="BUTTON_COLOURS_HEIGHT" fx:value="3"/>
        <Double fx:id="BUTTON_COLOURS_WIDTH" fx:value="35"/>

        <Double fx:id="SPECTRUM_INDICATOR_RADIUS" fx:value="5"/>
        <Double fx:id="SPECTRUM_INDICATOR_STROKE" fx:value="1.2"/>
    </fx:define>

    <GridPane alignment="CENTER_LEFT" hgap="$PADDING" vgap="$PADDING" prefWidth="${WINDOW_WIDTH - 2 * PADDING}">

        <VBox prefHeight="${PADDING * 2.5}" prefWidth="${(WINDOW_WIDTH - (5 * PADDING)) / 4}"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              alignment="CENTER" spacing="5">

            <HBox alignment="CENTER" spacing="5">
                <Label text="BRIGHTNESS"/>
                <Label fx:id="brightnessPercentLabel" text="0%"/>
            </HBox>
            <Slider fx:id="brightnessSlider"/>
        </VBox>

        <VBox prefHeight="${PADDING * 2.5}" prefWidth="${(WINDOW_WIDTH - (5 * PADDING)) / 4}"
              GridPane.columnIndex="1" GridPane.rowIndex="0"
              alignment="CENTER" spacing="5">

            <HBox alignment="CENTER" spacing="5">
                <Label text="SPEED"/>
                <Label fx:id="speedPercentLabel" text="0%"/>
            </HBox>
            <Slider fx:id="speedSlider"/>
        </VBox>

        <VBox prefHeight="${PADDING * 2.5}" prefWidth="${(WINDOW_WIDTH - (5 * PADDING)) / 4}"
              GridPane.columnIndex="2" GridPane.rowIndex="0"
              alignment="CENTER" spacing="5">

            <Label text="NUMBER OF COLOURS"/>
            <ChoiceBox fx:id="numberOfColoursChoiceBox" value="RAINBOW"
                       prefWidth="${(WINDOW_WIDTH - (5 * PADDING)) / 4}"/>
        </VBox>

        <VBox prefHeight="${PADDING * 2.5}" prefWidth="${(WINDOW_WIDTH - (5 * PADDING)) / 4}"
              GridPane.columnIndex="3" GridPane.rowIndex="0"
              alignment="CENTER" spacing="5">

            <Label text="SYNC WITH RAZER"/>
            <HBox alignment="CENTER">
                <CheckBox fx:id="syncWithRazerCheckbox"/>
            </HBox>
        </VBox>

    </GridPane>

</Pane>
