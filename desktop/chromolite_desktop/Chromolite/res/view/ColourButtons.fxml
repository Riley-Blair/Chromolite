<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.leytonblackler.chromolite.controller.ColourButtonsController">

    <!-- CONSTANTS -->
    <fx:define>
        <Double fx:id="WINDOW_WIDTH" fx:value="560"/>
        <Double fx:id="WINDOW_HEIGHT" fx:value="750"/>
        <Double fx:id="HEADER_HEIGHT" fx:value="30"/>
        <Double fx:id="SPECTRUM_HEIGHT" fx:value="335"/>
        <Double fx:id="PADDING" fx:value="15"/>
        <Double fx:id="BUTTON_COLOURS_ARC_SIZE" fx:value="8"/>
        <Double fx:id="BUTTON_COLOURS_HEIGHT" fx:value="3"/>
        <Double fx:id="BUTTON_COLOURS_WIDTH" fx:value="35"/>

        <Double fx:id="SPECTRUM_INDICATOR_RADIUS" fx:value="5"/>
        <Double fx:id="SPECTRUM_INDICATOR_STROKE" fx:value="1.2"/>
    </fx:define>

    <GridPane alignment="center" hgap="$PADDING" vgap="$PADDING">
        <ToggleButton id="primary-button" prefHeight="$PADDING"
                      prefWidth="${(WINDOW_WIDTH - (4 * PADDING)) / 3}" text="PRIMARY" GridPane.columnIndex="0"
                      GridPane.rowIndex="0"/>
        <ToggleButton id="secondary-button" prefHeight="$PADDING"
                      prefWidth="${(WINDOW_WIDTH - (4 * PADDING)) / 3}" text="SECONDARY" GridPane.columnIndex="1"
                      GridPane.rowIndex="0"/>
        <ToggleButton id="tertiary-button" prefHeight="$PADDING"
                      prefWidth="${(WINDOW_WIDTH - (4 * PADDING)) / 3}" text="TERTIARY" GridPane.columnIndex="2"
                      GridPane.rowIndex="0"/>
    </GridPane>

</Pane>
